<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:alpha="0.9"
    android:layout_margin="30dp"
    android:background="@drawable/select_tip_border"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/incident_bg"
        android:id="@+id/rl_tips"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <LinearLayout
            android:id="@+id/ll_root"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titleView"
                android:text="title"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tip_content"
                android:paddingTop="30dp"
                android:padding="10dp"
                android:paddingBottom="30dp"
                android:textSize="16sp"
                android:text=""
                android:textColor="@color/incident_textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_ok"
                    android:text="@string/ok"
                    android:layout_weight="1"
                    android:background="@drawable/incident_select_border"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_cancel"
                    android:visibility="gone"
                    android:text="@string/cancel"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:background="@drawable/incident_select_border"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>